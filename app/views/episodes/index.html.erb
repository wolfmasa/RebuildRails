<p id="notice"><%= notice %></p>

<h1>Listing Episodes</h1>

<table>
  <thead>
    <tr>
      <th>No</th>
      <th>Title</th>
      <th>Pubdate</th>
      <th>Episode Mp3</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @episodes.each do |episode| %>
      <tr>
          <td><%= episode.no %></td>
          <td><a href="<%= episode.link %>">
                  <%= episode.title %>
              </a>
          </td>
        <td><%= episode.pubDate %></td>
        <td><a href="<%= episode.mp3 %>">
            <%= episode.duration.strftime('%H:%M:%S') %>
            </a>
        </td>
        <td><%= link_to 'Show', episode %></td>
        <td><%= link_to 'Edit', edit_episode_path(episode) %></td>
        <td><%= link_to 'Destroy', episode, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

